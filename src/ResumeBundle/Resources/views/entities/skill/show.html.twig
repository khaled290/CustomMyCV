{% extends '@Resume/layout.html.twig' %}

{% block body %}
    <h1>Skill</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ skill.categorie }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ skill.libelle }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ skill.niveau }}</td>
            </tr>
            <tr>
                <th>Nom CV</th>
                <td>{{ skill.resume }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('competence_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('competence_edit', { 'id': skill.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
