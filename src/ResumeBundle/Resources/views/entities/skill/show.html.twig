{% extends '@Resume/layout.html.twig' %}

{% block body %}
    <div style="margin-top:80px">
        <div class="panel" >
                <div class="panel-heading text-center" style="background-color: #d9beba ; border-color: #d9beba">Compétences</div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <th>Id</th>
                        <th>Categorie</th>
                        <th>Libelle</th>
                        <th>Niveau</th>
                        <th>Nom CV</th>
                        </thead>
        <tbody>
            <tr>

                <td>{{ skill.id }}</td>


                <td>{{ skill.categorie }}</td>


                <td>{{ skill.libelle }}</td>


                <td>{{ skill.niveau }}</td>


                <td>{{ skill.resume }}</td>
            </tr>
        </tbody>
    </table>




    </div>
    </div>
    </div>
    </div>
<div  style="margin-top:40px">
    <div class="col-lg-6">
        <a href="{{ path('competence_index') }}">
            <button type="submit" class="btn btn-default btn-block">
                <i class="fa fa-chevron-circle-left"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i> Retour à la liste
            </button>
        </a>
    </div>
    <div class="col-lg-6">
        <a  href="{{ path('competence_edit', { 'id': skill.id }) }}">
            <button type="submit" class="btn btn-info btn-block">
                Edit <i class="fa fa-2x fa-pencil"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i>
            </button>
        </a>
    </div>
    <br>

    <div class="col-lg-6 col-lg-offset-3" style="margin-top:15px">
        {{ form_start(delete_form) }}

        <button type="submit" class="btn btn-danger btn-block">
            Delete   <i class="  fa-2x fa fa-trash-o"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i>
        </button>

        {{ form_end(delete_form) }}
    </div>


</div>
















{% endblock %}
