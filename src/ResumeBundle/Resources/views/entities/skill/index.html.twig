{% extends '@Resume/layout.html.twig' %}

{% block body %}
    <h1  class="text-center">Skills list</h1>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Categorie</th>
            <th>Libelle</th>
            <th>Niveau</th>
            <th>CV</th>
            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td><a href="{{ path('competence_show', { 'id': skill.id }) }}">{{ skill.id }}</a></td>
                <td>{{ skill.categorie }}</td>
                <td>{{ skill.libelle }}</td>
                <td>{{ skill.niveau }}</td>
                <td>{{ skill.resume }}</td>
                <td>

                            <a href="{{ path('competence_show', { 'id': skill.id }) }}"><i class="fa fa-2x fa-eye" aria-hidden="true"></i></a>

                            <a href="{{ path('competence_edit', { 'id': skill.id }) }}"><i class="fa fa-2x fa-pencil" aria-hidden="true"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <a href="{{ path('competence_new') }}">
        <button type="button" class="btn btn-primary">
            Nouvelle competence   <i class="fa  fa-2x fa-plus"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i>
        </button>
    </a>
{% endblock %}
