{% extends '@Resume/layout.html.twig' %}

{% block body %}


    <div class="col-lg-8  " style="margin-top: 80px">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">Nouveau CV</div>
            <div class="panel-body">
                {% form_theme form 'bootstrap_3_horizontal_layout.html.twig'  %}
                {{ form_start(form) }}

                {{ form_widget(form) }}
                {#<input type="submit" value="Edit" />#}
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <input type="submit" tabindex="4" class="form-control btn btn-primary" value="Enregistrer">
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}



            </div>


        </div>


    </div>
    <div class="col-lg-8 ">
        <div class="col-lg-6">
            <a href="{{ path('resume_index') }}">
                <button type="submit" class="btn btn-default btn-block">
                    <i class="fa fa-chevron-circle-left"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i> Back to the list
                </button>
            </a>
        </div>
    </div>















{% endblock %}
