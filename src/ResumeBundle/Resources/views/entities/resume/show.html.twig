{% extends '@Resume/layout.html.twig' %}

{% block body %}
<div  style="margin-top:80px">
    <div class="panel  ">
        <div class="panel-heading text-center" style="background-color: #d9beba ; border-color: #d9beba">Détail du CV</div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">

                    <thead>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Date de création</th>
                    <th>Description</th>
                    </thead>
        <tbody>
            <tr>

                <td>{{ resume.id }}</td>


                <td>{{ resume.titre }}</td>


                <td>{% if resume.dateCreation %}{{ resume.dateCreation|date('Y-m-d') }}{% endif %}</td>


                <td>{{ resume.description }}</td>
            </tr>
        </tbody>
    </table>

            </div>
        </div>
    </div>
</div>



    <div  style="margin-top:40px">

        <div class="col-lg-6">
            <a href="{{ path('resume_index') }}">
                <button type="submit" class="btn btn-default btn-block">
                    <i class="fa fa-chevron-circle-left"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i> Back to the list
                </button>
            </a>
        </div>
        <div class="col-lg-6">
            <a  href="{{ path('resume_edit', { 'id': resume.id }) }}">
                <button type="submit" class="btn btn-info btn-block">
                    Edit <i class="fa fa-2x fa-pencil"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i>
                </button>
            </a>
        </div>
        <br>

        <div class="col-lg-6 col-lg-offset-3" style="margin-top:15px">
            {{ form_start(delete_form) }}

            <button type="submit" class="btn btn-danger btn-block">
                Delete   <i class="  fa-2x fa fa-trash-o"  style="font-size:30px; vertical-align: middle;" aria-hidden="true"></i>
            </button>

            {{ form_end(delete_form) }}
        </div>





    </div>
{% endblock %}
