{% extends '@Resume/layout.html.twig' %}

{% block body %}
    <h1>Resume</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resume.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ resume.titre }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if resume.dateCreation %}{{ resume.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ resume.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resume_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('resume_edit', { 'id': resume.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
