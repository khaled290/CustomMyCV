{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <h1>Change password</h1>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <for class="col-lg-12">
                            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig'  %}
                            <form action="{{ path('fos_user_change_password') }}"  method="POST" class="fos_user_change_password">
                                {{ form_errors(form) }}
                                <div  class="form-group">
                                    {{ form_widget(form.current_password,{ 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans } }) }}
                                    <td>{{ form_errors(form.current_password) }}</td>
                                </div>
                                <div  class="form-group">
                                    {{ form_widget(form.plainPassword.first,{ 'attr': {'class': 'form-control', 'placeholder': 'form.new_password'|trans } }) }}
                                    <td>{{ form_errors(form.plainPassword.first) }}</td>
                                </div>

                                <div  class="form-group">
                                    {{ form_widget(form.plainPassword.second,{ 'attr': {'class': 'form-control', 'placeholder': 'form.new_password_confirmation'|trans } }) }}
                                    <td>{{ form_errors(form.plainPassword.second) }}</td>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="_submit" id="_submit" tabindex="4" class="form-control btn btn-login" value="{{ 'change_password.submit'|trans  }}">
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </form>
                        </for>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

