{% trans_default_domain 'FOSUserBundle' %}

<head>
    <link href="{{  asset('Login/login.css') }}" rel="stylesheet">
</head>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="{{ path('fos_user_security_login') }}" id="login-form-link">Login</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="{{ path('fos_user_registration_register') }}" id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <for class="col-lg-12">
                            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig'  %}
                            <form action="{{ path('fos_user_registration_register') }}"  method="POST" class="fos_user_registration_register">
                            {{ form_errors(form) }}
                                <div  class="form-group">
                                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                                    <td>{{ form_errors(form.username) }}</td>
                                </div>
                                <div  class="form-group">
                                    {{ form_widget(form.email,{ 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                                    <td>{{ form_errors(form.email) }}</td>
                                </div>

                                <div  class="form-group">
                                    {{ form_widget(form.plainPassword.first,{ 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
                                    <td>{{ form_errors(form.plainPassword.first) }}</td>
                                </div>
                                <div  class="form-group">
                                    {{ form_widget(form.plainPassword.second,{ 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
                                    <td>{{ form_errors(form.plainPassword.second) }}</td>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="_submit" id="_submit" tabindex="4" class="form-control btn btn-login" value="{{ 'registration.submit'|trans }}">
                                        </div>
                                    </div>
                                </div>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                            </form>
                        </for>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
